<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <title>Document</title>
</head>
<body>
  <div class="container">
    <h1>URL SHORTENER</h1>
    <br><br>
    <form action="/search" method="POST">
      <input type="search" name = "searchTerm" placeholder="Search here" class="form-control col mr-2" id="search">
    </form>
    <!-- <form action="/shortUrls" method="POST" class="my-4 form-inline">
      <label for="fullUrl" class="sr-only">Url</label>
      <input required placeholder="Url" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
      <input required type="text" name="notes" class="form-control col mr-2" id="notes" placeholder="Notes">
      <button class="btn btn-success" type="submit">Shrink</button>
    </form> -->
    <br>
    <h3>Search Results found</h3>

    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Notes</th>
          <th>Clicks</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(shortUrl => { %>
          <tr id="<%= shortUrl.data %>">
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.notes %></td>
            <td><%= shortUrl.clicks %></td>
            <td>
              
              <a href="/delete/<%= shortUrl.id %>" class="btn btn-danger">
                <button class="btn btn-danger">Delete</button> 
              </a>  
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>



